<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ImportExport" >

    <Button
        android:id="@+id/exportButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:onClick="exportFunction"
        android:text="Export" />

    <Button
        android:id="@+id/importButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:onClick="importFunction"
        android:text="Import" />

    <Button
        android:id="@+id/IEbackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="IEBackFunction"
        android:text="Back" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/IEbackButton"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/exportButton"
        android:layout_below="@+id/importButton"
        android:layout_marginTop="28dp"
        android:text="In order to export your passwords you have to do the Following:                                                          .                                                               - Press the export button                            - Navigate to /mnt/sdcard and copy the resultedSecrets file to your new device in the same place                       - Press the import button on the new device"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>